<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="65dp"
    tools:context=".BordFragment">


    <LinearLayout
        android:id="@+id/column2"
        android:layout_width="297dp"
        android:layout_height="708dp"

        android:layout_marginTop="4dp"
        android:background="@drawable/scroll_box"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/addPreOrder"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/starterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Förrätter"
            android:textSize="20sp" />

        <Button
            android:id="@+id/starterSelector"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:text="Välj" />


        <TextView
            android:id="@+id/mainCourseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75sp"
            android:text="Varmrätter"
            android:textSize="20sp" />


        <Button
            android:id="@+id/mainCourseSelector"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:text="Välj" />

        <TextView
            android:id="@+id/dessertText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75sp"
            android:text="Dessert"
            android:textSize="30sp" />

        <Button
            android:id="@+id/dessertSelector"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:text="Välj" />

        <TextView
            android:id="@+id/drinkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75sp"
            android:text="Dryck"
            android:textSize="30sp" />

        <Button
            android:id="@+id/drinkSelector"
            android:layout_width="130dp"
            android:layout_height="48dp"
            android:text="Välj" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/addPreOrder"
        android:layout_width="311dp"
        android:layout_height="703dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/scroll_box"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/preOrderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="30sp" />


        <ScrollView
            android:id="@+id/mainScrollView3"
            android:layout_width="372dp"
            android:layout_height="400dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectedOrders"
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="parent" />


        </ScrollView>


    </LinearLayout>

    <Button
        android:id="@+id/addToListButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Slutför beställning"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>